<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/relativeLayout_album"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="?attr/selectableItemBackground">

	<ImageView
		android:id="@+id/imageView_album"
		android:layout_width="70dp"
		android:layout_height="70dp"
		android:scaleType="centerCrop"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginLeft="10dp"
		android:layout_toRightOf="@+id/imageView_album"
		android:orientation="vertical">

		<TextView
			android:id="@+id/textView_album"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:singleLine="true"
			android:textColor="@color/app_black_color"
			android:textSize="16dp"/>

		<TextView
			android:id="@+id/textView_album_count"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:singleLine="true"
			android:textSize="12dp"/>

	</LinearLayout>

	<View
		style="@style/HorizontalDivider"
		android:layout_height="1dp"
		android:layout_alignParentBottom="true"/>

</RelativeLayout>
