<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Theme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar"/>

	<style name="Theme.TransStatus" parent="Theme.NoActionBar">
		<item name="android:windowTranslucentStatus">true</item>
	</style>

	<!-- Shadow -->
	<style name="Shadow">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">7dp</item>
		<item name="android:background">@drawable/shadow_top_style</item>
	</style>

	<style name="ShadowBottom">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">7dp</item>
		<item name="android:background">@drawable/shadow_bottom_style</item>
	</style>

	<!-- Divider -->
	<style name="VerticalDivider">
		<item name="android:layout_width">1px</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:background">#FFE6E6E6</item>
	</style>

	<style name="HorizontalDivider">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">1px</item>
		<item name="android:background">#FFE6E6E6</item>
	</style>

	<!-- dialog button text style -->
	<style name="dialogButtonTextStyle">
		<item name="android:textColor">@color/black_03_text</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:minWidth">68dp</item>
		<item name="android:layout_height">38dp</item>
		<item name="android:paddingLeft">8dp</item>
		<item name="android:paddingRight">8dp</item>
		<item name="android:layout_marginTop">10dp</item>
		<item name="android:layout_marginBottom">8dp</item>
		<item name="android:layout_marginRight">8dp</item>
		<item name="android:textSize">12dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:background">?attr/selectableItemBackground</item>
		<item name="android:gravity">center</item>
	</style>

</resources>